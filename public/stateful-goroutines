      onkeydown = (e) => {
          
          if (e.key == "ArrowLeft") {
              window.location.href = 'mutexes';
          }
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'sorting';
          }
          
      }

      function onChange(e) {
        window.location.href = event.target.value
      }

