  <script>
      onkeydown = (e) => {
          
          if (e.key == "ArrowLeft") {
              window.location.href = 'spawning-processes';
          }
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'signals';
          }
          
      }

      function onChange(e) {
        window.location.href = event.target.value
      }

