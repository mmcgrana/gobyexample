      onkeydown = (e) => {
          
          if (e.key == "ArrowLeft") {
              window.location.href = 'non-blocking-channel-operations';
          }
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'range-over-channels';
          }
          
      }

