      onkeydown = (e) => {
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'values';
          }
          
      }

      function onChange(e) {
        window.location.href = event.target.value
      }

      window.addEventListener('DOMContentLoaded', () => {
        document.getElementById("examples").value = window.location.pathname.replace('/', '')
      })
  </script>
