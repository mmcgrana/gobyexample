      onkeydown = (e) => {
          
          if (e.key == "ArrowLeft") {
              window.location.href = 'tickers';
          }
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'waitgroups';
          }
          
      }

      function onChange(e) {
        window.location.href = event.target.value
      }

